{
  "version": 2,
  "name": "leader-follower-app",
  "builds": [
    {
      "src": "server-neon.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**", "*.js", "*.json"]
      }
    },
    {
      "src": "src/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server-neon.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "github": {
    "enabled": true,
    "silent": false
  }
}